<UserControl x:Class="UITests.Windows_UI_Xaml_Controls.ItemsControl.ItemsControl_NestedReset"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		
		<ItemsControl x:Name="Form" ItemsSource="{Binding Fields}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<ItemsControl ItemsSource="{Binding Extensions}"
								  BorderBrush="Black"
								  BorderThickness="1">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Rectangle Height="50"
										   Width="50"
										   Fill="Red" />
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		
		<Button Content="Field1"
				Click="Button_Click1"
				VerticalAlignment="Bottom"
				Margin="16"
				Grid.Row="1" />
		<Button Content="Field2"
				Click="Button_Click2"
				VerticalAlignment="Bottom"
				Margin="16"
				Grid.Row="2" />
		<Button Content="DebugVT"
				Click="DebugVT"
				VerticalAlignment="Bottom"
				Margin="16"
				Grid.Row="3" />
	</Grid>
</UserControl>
